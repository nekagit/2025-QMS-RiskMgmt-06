{
  "name": "2025-qms-risk-mgmt-06",
  "version": "1.0.0",
  "description": "Risk Management System for Quality Management",
  "main": "server.js",
  "scripts": {
    "build": "npm run build:ts && npm run build:css",
    "build:ts": "tsc && tsc --project tsconfig.client.json",
    "build:css": "sass src/styles/main.scss public/css/main.css",
    "dev": "npm run build && node dist/server.js",
    "start": "node dist/server.js",
    "prebuild": "mkdir -p public/css public/js dist"
  },
  "keywords": ["qms", "risk-management", "htmx", "typescript"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "htmx.org": "^1.9.10"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "sass": "^1.69.5",
    "typescript": "^5.3.3"
  }
}

